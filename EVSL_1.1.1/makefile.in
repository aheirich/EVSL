###############################################################################
##  All configurable variables are defined in the file named makefile.in.in
##  When Autoconf is run, it will create a file named makefile.in which
##  will have all of the configurable variables replaced with their values.
##############################################################################


srcdir = .
top_srcdir = .
prefix = /home/li50/workspace/tmpinstall
exec_prefix = ${prefix}


EVSL_RELEASE_NAME    = EVSL
EVSL_RELEASE_VERSION = 1.1.1
EVSL_RELEASE_DATE    = 2018/03/23
EVSL_RELEASE_TIME    = 00:00:00
EVSL_RELEASE_BUGS    = saad@cs.umn.edu

EVSL_SRC_DIR         = /home/ruipeng/workspace/EVSL/EVSL_1.1.1
EVSL_BUILD_DIR       = /home/ruipeng/workspace/EVSL/EVSL_1.1.1/EVSL
EVSL_INSTALL_DIR     = ${prefix}
EVSL_LIB_INSTALL     = ${EVSL_INSTALL_DIR}/lib
EVSL_INC_INSTALL     = ${EVSL_INSTALL_DIR}/include
EVSL_LIB_SUFFIX      = .a

.SUFFIXES: .o .c .f90

##################################################################
## RULES
# ##################################################################
%.o: %.c
	$(MUTE) $(CC) $(CFLAGS) $(INCLUDES) -o $@ -c $<

%.o: %.f90
	$(MUTE) $(FC) $(FCFLAGS) $(INCLUDES) -o $@ -c $<

CC                   = gcc
CFLAGS               = -O2 -Wall -Wno-unused-result 
LINK_CC              = gcc
FC                   = gfortran
FCFLAGS              = -O2 
LINK_FC              = gfortran
LDFLAGS              = 
AR                   = ar rc
RANLIB               = ranlib
LIBS_DIR             = 
LIBS                 = -lm -lrt 

# SHARED LIBRARIES
BUILD_FC_SHARED     = 
BUILD_CC_SHARED     = 
SHARED_SET_SONAME   = 
SHARED_OPTIONS      = 

##################################################################
## BLAS & LAPACK
##################################################################
LIBLAPACK            = 
LIBLAPACK_DIR        = 
LIBBLAS              = 
LIBBLAS_DIR          = 

##################################################################
## INTEL MKL
##################################################################
MKLROOT             = 

##################################################################
## DIRECT SOLVER
##################################################################
DIRECTSOL            = CXSPARSE
DIRECTSOL_INTERFACE  = ${EVSL_SRC_DIR}/DIRECT/Interface/evsl_cxsparse.o
METIS_DIR            = 
SUITESPARSE_DIR      = 
LIBDIRECTSOL         = -L/home/ruipeng/workspace/EVSL/EVSL_1.1.1/DIRECT/CXSparse/Lib -lcxsparse
