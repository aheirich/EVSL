###############################################################################
##  All configurable variables are defined in the file named makefile.in.config
##  When Autoconf is run, it will create a file named makefile.in which
##  will have all of the configurable variables replaced with their values.
##############################################################################


srcdir = .
top_srcdir = .
prefix = /home/saady/xye/EVSL/EVSL_1.1.1/EVSL
exec_prefix = ${prefix}


EVSL_RELEASE_NAME    = EVSL
EVSL_RELEASE_VERSION = 1.1.1
EVSL_RELEASE_DATE    = 2018/03/23
EVSL_RELEASE_TIME    = 00:00:00
EVSL_RELEASE_BUGS    = saad@cs.umn.edu

EVSL_SRC_DIR         = /home/saady/xye/EVSL/EVSL_1.1.1
EVSL_BUILD_DIR       = /home/saady/xye/EVSL/EVSL_1.1.1/EVSL
EVSL_INSTALL_DIR     = ${prefix}
EVSL_LIB_INSTALL     = ${EVSL_INSTALL_DIR}/lib
EVSL_INC_INSTALL     = ${EVSL_INSTALL_DIR}/include
EVSL_LIB_SUFFIX      = .a

.SUFFIXES: .o .c .f90

##################################################################
## RULES
# ##################################################################
%.o: %.c
	$(MUTE) $(CC) $(CFLAGS) $(INCLUDES) -o $@ -c $<

%.o: %.f90
	$(MUTE) $(FC) $(FCFLAGS) $(INCLUDES) -o $@ -c $<

CC                   = gcc
CFLAGS               = -O2 -Wall -Wno-unused-result -m64 
LINK_CC              = gcc
FC                   = gfortran
FCFLAGS              = -O2 -m64 
LINK_FC              = gfortran
LDFLAGS              = 
AR                   = ar rc
RANLIB               = ranlib
LIBS_DIR             = 
LIBS                 = -lm -lrt -L${MKLROOT}/lib/intel64 -Wl,--no-as-needed -lmkl_intel_lp64 -lmkl_sequential -lmkl_core -lpthread -lm -ldl 

# SHARED LIBRARIES
BUILD_FC_SHARED     = 
BUILD_CC_SHARED     = 
SHARED_SET_SONAME   = 
SHARED_OPTIONS      = 

##################################################################
## BLAS & LAPACK
##################################################################
